@inherits UmbracoViewPage<Lecoati.LeBlender.Extension.Models.LeBlenderModel>
@using FormPackage6.Core.DomainModel.Form;
@{
    if (Model != null)
    {
        Field field = AutoMapper.Mapper.Map<Field>(Model.Items.FirstOrDefault());
        <div class="manaoformBackoffice">
            <div class="form-field">
                <label class="field-label">@field.Name</label>
                <div class="dropdown-wrap">
                    <input type="text" class="field-placeholder select-box" placeholder="@field.Placeholder" />
                    <i class="toggle-down fa fa-angle-down"></i>
                </div>
                <div>
                    @foreach (var option in field.Options)
                    {
                        <div class="moveable">
                            <input type="text" class="field-label-multi-textbox" value="@option.Name">
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}
